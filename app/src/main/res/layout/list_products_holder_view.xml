<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorText"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/image_product_home"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            ></ImageView>

        <RelativeLayout
            android:id="@+id/content_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_product_home"
            android:layout_centerVertical="true"
            >

            <TextView
                android:id="@+id/name_product_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textSize="14dp"
                android:textColor="#000"
                ></TextView>

            <TextView
                android:id="@+id/address_product_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_product_home"
                android:text="address"
                android:layout_marginTop="5dp"
                android:textSize="10dp"
                android:maxLines="1"
                ></TextView>

            <TextView
                android:id="@+id/description_product_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/address_product_home"
                android:text="address"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textSize="10dp"
                android:maxLines="1"
                ></TextView>

            <RelativeLayout
                android:id="@+id/detail_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_below="@+id/description_product_home"
                >

                <ImageView
                    android:id="@+id/heart_product_home"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_save"
                    android:layout_alignParentLeft="true"
                    ></ImageView>

                <RelativeLayout
                    android:id="@+id/detail_left_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/detail_right_home"
                    android:layout_centerVertical="true"
                    >
                    <com.kynguyen.shop_3hkt.FontAwesome
                        android:id="@+id/clock_product_home"
                        android:layout_width="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="&#xf017;"
                        android:textSize="10dp"
                        >
                    </com.kynguyen.shop_3hkt.FontAwesome>

                    <TextView
                        android:id="@+id/time_ship_product_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15min"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:textSize="10dp"
                        android:textColor="#000"
                        ></TextView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/detail_right_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"

                    >
                    <com.kynguyen.shop_3hkt.FontAwesome
                        android:id="@+id/dot_product_home"
                        android:layout_width="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content"
                        android:text="&#xf192;"
                        android:textSize="10dp"
                        >
                    </com.kynguyen.shop_3hkt.FontAwesome>

                    <TextView
                        android:id="@+id/range_ship_product_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_centerVertical="true"
                        android:text="5km"
                        android:textColor="#000"
                        android:textSize="10dp"
                        ></TextView>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>