<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PapreAdapter.MyOrders.CartFragment">

    <RelativeLayout
        android:id="@+id/cart_show_no_Order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/logo_cart_show_noOrder"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/cartmo" />

        <TextView
            android:id="@+id/title_cart_show_noOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Carts Orders"
            android:layout_marginTop="10dp"
            android:layout_below="@id/logo_cart_show_noOrder"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textFontWeight="400"
            android:textColor="@color/colorAccent"
            ></TextView>
    </RelativeLayout>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_cart_product_holder_View"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="1dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/container_home"
        android:layout_marginBottom="5dp"
        ></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>