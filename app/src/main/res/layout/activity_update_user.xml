<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".member.UpdateUserActivity">

    <RelativeLayout
        android:id="@+id/rlll_user_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        >

        <com.kynguyen.shop_3hkt.FontAwesome
            android:id="@+id/close_update_user"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:text="&#xf053;"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            >
        </com.kynguyen.shop_3hkt.FontAwesome>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update User"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            >
        </TextView>
    </RelativeLayout>

    <com.kynguyen.shop_3hkt.FontAwesome
        android:id="@+id/font_awesome_account"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/rlll_user_update"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:text="&#xf007;"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="80dp"
        ></com.kynguyen.shop_3hkt.FontAwesome>

    <RelativeLayout
        android:id="@+id/container_update_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/font_awesome_account"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_input_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >
           <EditText
               android:id="@+id/name_update_user"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Name"
               ></EditText>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_input_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_input_update"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"

            android:visibility="visible">

            <EditText
                android:id="@+id/email_update_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:hint="Email"></EditText>


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phone_input_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_input_update"
            android:layout_marginTop="5dp"

            android:gravity="center_horizontal"
            android:visibility="visible">

            <EditText
                android:id="@+id/phone_update_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Phone"></EditText>


        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/address_input_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_input_update"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"

            android:visibility="visible">

            <EditText
                android:id="@+id/address_update_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"></EditText>

        </com.google.android.material.textfield.TextInputLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/update_user"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttons"
        android:textColor="@color/colorText"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:text="Update"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        ></Button>

</RelativeLayout>