<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminActivity"
    android:background="#f1f1f1"
    >
    <RelativeLayout
        android:id="@+id/rlll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        >

        <TextView
            android:id="@+id/title_admin"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:layout_marginLeft="15dp"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            >
        </TextView>

        <TextView
            android:id="@+id/back_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop"
            android:layout_marginRight="15dp"
            android:textColor="#fff"
            android:textSize="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            >
        </TextView>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/category_container"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_below="@+id/rlll"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorText"
        >
        <com.kynguyen.shop_3hkt.FontAwesome
            android:id="@+id/icon_list_category"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="&#xf03a; "
            android:textSize="80dp"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/text_list_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:layout_marginTop="10dp"
            android:layout_below="@id/icon_list_category"
            android:gravity="center"
            android:textSize="22dp"
            ></TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/product_container"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_below="@+id/category_container"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorText"
        >
        <com.kynguyen.shop_3hkt.FontAwesome
            android:id="@+id/icon_list_product"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="&#xf0c9; "
            android:textSize="90dp"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/text_list_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Products"
            android:layout_marginTop="10dp"
            android:layout_below="@id/icon_list_product"
            android:gravity="center"
            android:textSize="22dp"
            ></TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Order_container"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_below="@+id/product_container"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorText"
        >
        <com.kynguyen.shop_3hkt.FontAwesome
            android:id="@+id/icon_list_order"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="&#xf218;"
            android:textSize="65dp"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textColor="@color/colorPrimary"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/text_list_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Orders"
            android:layout_marginTop="10dp"
            android:layout_below="@id/icon_list_order"
            android:gravity="center"
            android:textSize="22dp"
            ></TextView>

    </RelativeLayout>

</RelativeLayout>