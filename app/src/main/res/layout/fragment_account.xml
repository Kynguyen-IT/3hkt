<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f1f1f1">


  <RelativeLayout
    android:id="@+id/header_account"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:background="@drawable/bg2"
    >
    <de.hdodenhof.circleimageview.CircleImageView
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:id="@+id/user_profile_image"
      android:layout_marginTop="10dp"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:layout_centerHorizontal="true"
      android:src="@drawable/profile"
      app:civ_border_width="2dp"
      app:civ_border_color="@color/colorPrimary"
        />

    <TextView
      android:id="@+id/user_profile_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/user_profile_image"
      android:textColor="@color/colorPrimaryDark"
      android:textStyle="bold"
      android:textSize="25sp"
      android:gravity="center"
      android:text="user name"
      android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <Button
      android:id="@+id/login_btn"
      android:layout_width="150dp"
      android:layout_height="40dp"
      android:layout_below="@+id/user_profile_name"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="15dp"
      android:layout_marginRight="15dp"
      android:background="@drawable/buttons"
      android:textAllCaps="false"
      android:layout_centerHorizontal="true"
      android:text="Login"
      android:textColor="@color/white"
      android:textSize="15sp"
      />
  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/main_account"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/header_account"
      >
    <RelativeLayout
        android:id="@+id/setting_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:background="@color/colorText"
          android:layout_marginTop="10dp"
          android:layout_gravity="center"
          >

        <com.kynguyen.shop_3hkt.FontAwesome
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="&#xf013;"
            android:textSize="14dp"
            android:textColor="#000"
            android:layout_marginLeft="15dp"
            >
        </com.kynguyen.shop_3hkt.FontAwesome>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:layout_gravity="center_vertical"
            android:textSize="14dp"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            ></TextView>

        <com.kynguyen.shop_3hkt.FontAwesome
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:text="&#xf054;"
            android:textSize="14dp"
            android:textColor="#000"
            android:layout_marginRight="15dp"
            >
        </com.kynguyen.shop_3hkt.FontAwesome>
      </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/admin_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setting_account"
        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:background="@color/colorText"
          android:layout_marginTop="2dp"
          android:layout_gravity="center"
          >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin"
            android:layout_gravity="center_vertical"
            android:textSize="14dp"
            android:textColor="#000"
            android:layout_marginLeft="25dp"
            ></TextView>

        <com.kynguyen.shop_3hkt.FontAwesome
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:text="&#xf054;"
            android:textSize="14dp"
            android:textColor="#000"
            android:layout_marginRight="15dp"
            >
        </com.kynguyen.shop_3hkt.FontAwesome>
      </LinearLayout>

    </RelativeLayout>


  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/footer_account"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/main_account"
      android:layout_marginBottom="20dp"
      android:layout_marginTop="20dp"
      >
    <Button
        android:id="@+id/logout_btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/input_design"
        android:text="Log out"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
       android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:width="1dp"
        ></Button>

    <TextView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logout_btn"
        android:layout_marginTop="5dp"
        android:text="Version 1.0.0 Team 3HKT"
        android:textSize="14dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        ></TextView>

  </RelativeLayout>

</RelativeLayout>