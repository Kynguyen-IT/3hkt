<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.category.Addcategories">

    <TextView
        android:id="@+id/title_add_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Category"
        android:textAlignment="center"
        android:textSize="24dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/colorPrimary"
        android:layout_marginBottom="25dp"
        ></TextView>

    <RelativeLayout
        android:id="@+id/heard_caetgory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/title_add_category"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_category_change"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/unnamed"
            ></de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:id="@+id/add_image_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Add Image"
            android:textSize="18dp"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:layout_below="@+id/image_category_change"
            ></TextView>

    </RelativeLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/name_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@+id/heard_caetgory"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        >
        <EditText
            android:id="@+id/name_category_ip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            ></EditText>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/add_category_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:background="@drawable/buttons"
        android:textColor="@color/colorText"
        android:textSize="20dp"
        android:layout_below="@+id/name_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        >

    </Button>



</RelativeLayout>