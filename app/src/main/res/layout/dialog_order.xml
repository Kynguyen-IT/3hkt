<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="200dp"
    android:background="@drawable/radius_top"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_success"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/success"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            ></ImageView>

        <TextView
            android:id="@+id/text_success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Awesome!"
            android:layout_below="@+id/image_success"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="#000"
            ></TextView>

        <RelativeLayout
            android:id="@+id/box_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_success"
            android:background="#d4edda"
            android:padding="15dp"
            >


                <TextView
                    android:id="@+id/your_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your order id is"
                    android:layout_weight="1"
                    android:textColor="#155724"
                    android:textAlignment="center"
                    ></TextView>

                <TextView
                    android:id="@+id/status_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/your_order"
                    android:textColor="#dc3545"
                    android:layout_weight="08"
                    android:text="asdgsfhdsgjdh"
                    android:textAlignment="center"
                    ></TextView>
        </RelativeLayout>


        <TextView
            android:id="@+id/description_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="You'll receive  product order shortly."
            android:textColor="#444"
            android:textAlignment="center"
            android:layout_below="@id/box_information"
            ></TextView>

            <Button
                android:id="@+id/continue_shopping"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_below="@id/description_order"
                android:background="@drawable/buttons"
                android:textAllCaps="false"
                android:text="Continue Shopping"
                android:textColor="#fff"
                android:textSize="13sp"
                android:layout_centerHorizontal="true"
                />


    </RelativeLayout>





</RelativeLayout>